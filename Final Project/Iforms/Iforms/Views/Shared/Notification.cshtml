@if (TempData["SuccessMsg"] != null || TempData["ErrorMsg"] != null || TempData["InfoMsg"] != null || TempData["WarningMsg"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.options = {
            "target": "body",
            "positionClass": "toast-center",
            "closeButton": true,
            "progressBar": true,
            "escapeHtml": true,
            "timeOut": "5000"
        };
    </script>
}

@if (TempData["SuccessMsg"] != null)
{
    <script type="text/javascript">
        toastr.success('@TempData["SuccessMsg"]');
    </script>
}

@if (TempData["ErrorMsg"] != null)
{
    <script type="text/javascript">
        toastr.error('@TempData["ErrorMsg"]');
    </script>
}

@if (TempData["InfoMsg"] != null)
{
    <script type="text/javascript">
        toastr.info('@TempData["InfoMsg"]');
    </script>
}

@if (TempData["WarningMsg"] != null)
{
    <script type="text/javascript">
        toastr.warning('@TempData["WarningMsg"]');
    </script>
}
