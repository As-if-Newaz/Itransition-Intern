@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor  

<nav class="navbar navbar-expand-lg navbar-dark navbar-gradient">  
    <div class="container-fluid">  
        <a class="navbar-brand app-logo" href="@Url.Action("Index", "Home")" style="text-decoration: none;">Iforms</a>  
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">  
            <span class="navbar-toggler-icon"></span>  
        </button>  
        <div class="collapse navbar-collapse" id="navbarNav">  
            <div class="container">  
            </div>  
            @if (HttpContextAccessor.HttpContext.Request.Cookies["Role"] != null)  
            {  
                <h5 style="display:inline-block;">Hi, <b>@HttpContextAccessor.HttpContext.Request.Cookies["name"]?.ToString()</b></h5>  
                <span>&nbsp;&nbsp;&nbsp;</span>  
                <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">  
                    @Html.AntiForgeryToken()  
                    <button type="submit" class="btn btn-outline-light me-2">  
                        <i class="bi bi-box-arrow-right"></i> Logout  
                    </button>  
                </form>  
            }  
        </div>  
    </div>  
</nav>  

<div class="button-bar">  
    <div class="container">  
        <ul class="navbar-nav flex-row">  
            <li class="nav-item">  
                @{  
                    var role = HttpContextAccessor.HttpContext.Request.Cookies["Role"];  
                    if (role == "Admin")  
                    {  
                        // Admin buttons  
                        <a href="@Url.Action("Index", "Home")" class="btn btn-glass">Home</a>  
                        <a href="@Url.Action("UserManagement", "AdminDashboard")" class="btn btn-glass">Manage Users</a>  
                        <button class="btn btn-glass">Manage Templates</button>  
                        <button class="btn btn-glass">Manage Admin Applications</button>  
                        <button class="btn btn-glass">Manage Activity Logs</button>  
                    }  
                    else if (role == "User")  
                    {  
                        // User buttons  
                        <a href="@Url.Action("Index", "Home")" class="btn btn-glass">Home</a>  
                        <a href="@Url.Action("Create", "Template")" class="btn btn-glass">Create Template</a>  
                        <button class="btn btn-glass">Manage Templates</button>  
                        <button class="btn btn-glass">Manage Admin Applications</button>  
                        <button class="btn btn-glass">Manage Activity Logs</button>  
                    }  
                    else  
                    {  
                        // Public buttons  
                        <a href="@Url.Action("login", "Auth")" class="btn btn-glass">Login</a>  
                        <a href="@Url.Action("register", "User")" class="btn btn-glass">Sign up</a>  
                        <a href="@Url.Action("Privacy", "Home")" class="btn btn-glass">Privacy Policy</a>  
                        <button class="btn btn-glass">About Us</button>  
                        <button class="btn btn-glass">Terms and Conditions</button>  
                    }  
                }  
            </li>  
        </ul>  
    </div>  
</div>