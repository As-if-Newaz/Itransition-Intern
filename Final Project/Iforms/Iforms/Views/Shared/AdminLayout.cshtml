@{
    Layout = "_Layout";
}

<nav class="navbar navbar-expand-lg navbar-dark navbar-gradient">
    <div class="container-fluid">
        <a class="navbar-brand app-logo" href="@Url.Action("Index", "AdminDashboard")" style="text-decoration: none;">Iforms</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-light me-2">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="admin-panel">
    <div class="container">
        <div class="d-flex justify-content-start">
            <a href="@Url.Action("UserManagement", "AdminDashboard")" class="btn btn-glass">Manage Users</a>
            <button class="btn btn-glass">Manage Templates</button>
            <button class="btn btn-glass">Manage Admin Applications</button>
            <button class="btn btn-glass">Manage Activity Logs</button>
        </div>
    </div>
</div>

<div class="content-area glass-effect">
    <div class="container">
        <partial name="Notification" />
        @RenderBody()
    </div>
</div>

@section Scripts {
    @await RenderSectionAsync("Scripts", required: false)
} 