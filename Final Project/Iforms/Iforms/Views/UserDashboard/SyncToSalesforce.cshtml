@model Iforms.MVC.Models.SalesforceAccountViewModel
@{
    ViewData["Title"] = "Sync to Salesforce";
}
<h2 class="text-center">Sync Your Profile to Salesforce</h2>

@if (!string.IsNullOrEmpty(Model.ResultMessage))
{
    <div class="alert @(Model.ResultMessage.Contains("success", System.StringComparison.OrdinalIgnoreCase) ? "alert-success" : "alert-danger")">
        @Model.ResultMessage
    </div>
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3>Create Salesforce Account</h3>
            </div>
            <div class="card-body">
                @await Html.PartialAsync("_SalesforceAccountForm", Model)
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 